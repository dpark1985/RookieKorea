<body ng-controller="MainCtrl" class="padding0">

    <!-- Start Header -->



    <nav class="navbar navbar-default navbar-fixed-top margin0" ng-app="common" ng-controller="NavCtrl" ng-include="template.navBar">

    </nav>



    <div class="container marginT74">
        <div class="row-fluid">
            <div>
                <div class="page-header">
                    <h1>동호회 정보를 입력해 주세요.</h1>
                </div>

                <form class="container marginB100" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class='col-sm-10'>
                            <div class="form-group">
                                <label for="clubName">동호회 이름</label>
                                <input type="text" class="form-control" id="clubName" name="clubName" placeholder="동호회 이름">
                            </div>


                            <div class="form-group">
                                <label for="clubPhone">대표 전화번호</label>
                                <input type="text" class="form-control" id="clubPhone" name="clubPhone" placeholder="전화번호">
                            </div>

                            <div class="form-group">
                                <label for="clubEmail">대표 이메일</label>
                                <input type="text" class="form-control" id="clubEmail" name="clubEmail" placeholder="전화번호">
                            </div>

                            <div class="form-group">
                                <label for="clubLocation">주요 활동 위치</label>
                                <input type="text" class="form-control" id="clubLocation" name="clubLocation" placeholder="주요 활동 위치">
                            </div>

                            <div class="form-group">
                                <label for="clubURL">홈페이지</label>
                                <input type="text" class="form-control" id="clubURL" name="clubURL" placeholder="홈페이지">
                            </div>

                            <div class="form-group">
                                <label for="compSponsorship">상세설명</label>

    
                                <textarea name="editor1" id="editor1" rows="10" cols="80">
                                    코트장 상세 설명을 작성해주세요.
                                </textarea>
                                <script>
                                    // Replace the <textarea id="editor1"> with a CKEditor
                                    // instance, using default configuration.
                                    CKEDITOR.replace( 'editor1' );
                    
                                </script>

                            </div>

                            <div class="form-inline marginB15 width100">
                                <div class='input-group date width100'>
                                    <label for="clubImgText">사진 업로드</label><br/>
                                    <div class="input-group col-sm-5">
                                        <input type="text" class="form-control" id="clubImgText" name="clubImgText" placeholder="" readonly="readonly">
                                        <div class="input-group-addon padding0" style="width: 74px; background: url('../../images/btn/uploadBtn.png') no-repeat 0 0;">
                                            <input type="file" id="clubImg" name="clubImg" />
                                        </div>
                                    </div>
                                    <p class="help-block">대회포스터, 사진 업로드해주세요.</p>
                                    <p class="help-block">사진 크기는 가로 300px / 세로 200px에 최적화되어 있습니다.</p>
                                </div>
                            </div>



                            <div class="form-group">
                                <a href="" id="modalPreview" class="btn btn-primary col-md-12" data-toggle="modal" data-target="#preview">미리보기</a>
                            </div>
                            <script>
                                $(document).ready(function(){
                                    $('#submit').hide();
                                });
                                
                            
                            </script>

                            <script>
                                $('#modalPreview').click(function(){

                                    var url = window.location.pathname;
                                    var urlSub = url.split('/');
                                    $('#modalTitle').html($('#clubName').val()+"<br><small>"+urlSub[2]+"</small>");
                                    $('#cLocation').html($('#clubLocation').val());
                                    $('#cPhone').html($('#clubPhone').val());
                                    $('#cEmail').html($('#clubEmail').val());
                                    $('#cURL').html('<a href="'+ $('#clubURL').val() +'" target="_blank">'+ $('#clubURL').val() +'</a>');
                                    $('#info').html(CKEDITOR.instances.editor1.getData());


                                    if($('#clubName').val() != '' && $('#clubLocation').val() != '' && $('#clubPhone').val() != '' && $('#clubImgText').val() != ''){
                                        $('#submit').show();

                                    } else {
                                        $('#submit').hide();
                                    }
                                })

                            </script>
                            <script>
                                var fileInput = document.getElementById('clubImg');
                                fileInput.onchange = function(){
                                    $('#clubImgText').val(this.value);
                                    var files = this.files;

                                    for(var i=0; i<files.length; i++){
                                        var file = files.item(i);

                                        var reader = new FileReader();
                                        reader.onload = function(){
                                            var image = document.createElement('img');
                                            image.width = 192.5;
                                            image.height = 128.328;
                                            image.style = "border: 1px solid rgb(221,221,221); padding: 5px;";
                                            image.src = reader.result;

                                            $('#imgReview').append(image);
                                        };
                                        reader.readAsDataURL(file);
                                    }
                                };

                            </script>


                            <div class="form-group">
                                <button id="submit" type="submit" class="btn btn-success col-md-12 marginT15">완료</button>
                            </div>
                        </div>
                    </div>
                </form>




            </div>

        </div>


    </div>


    <!-- Modal -->
    <div class="modal fade" id="preview" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: darkturquoise;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        동호회 보기
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="page-header col-md-9 margin0 paddingT10">
                                <h1 id="modalTitle"></h1>
                            </div>
                            <div class="col-md-3" id="imgReview">
                            </div>
                        </div>
                        <div class="row marginT30">
                            <table class="table table-condensed">
                                <tbody class="borderT2SG">
                                    <tr>
                                        <th>주요 활동 위치</th>
                                        <td id="cLocation"></td>
                                    </tr>
                                    <tr>
                                        <th>대표 전화번호</th>
                                        <td id="cPhone"></td>
                                    </tr>
                                    <tr>
                                        <th>대표 이메일주소</th>
                                        <td id="cEmail"></td>
                                    </tr>
                                    <tr>
                                        <th>홈페이지</th>
                                        <td id="cURL"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row marginT30">
                            <div id="info"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <img src="../../images/logo.png">
                </div>
            </div>
        </div>
